<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WoongStock" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- 아이콘을 어둡게 표시하여 흰색 배경에서 잘 보이도록 설정 -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/nanum</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="colorPrimary">@color/main_color</item>
    </style>


    <style name="Theme.WoongStock" parent="Base.Theme.WoongStock" />

    <style name="toolbar_image_btn">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="Cursor.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 다른 속성들 -->
        <item name="colorControlActivated">@color/cursor_color</item>
    </style>

    <style name="Basic_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Basic_actionbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="Basic_icon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Basic_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/nanumextrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Basic_div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/div_color</item>
    </style>

    <style name="Basic_text_input_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Register_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/main_color</item> <!-- 액티브 밑줄 컬러 -->
        <item name="android:textColorHint">@color/hint_color</item> <!-- Hint 컬러 -->
        <item name="hintTextColor">@color/active_hint_color</item>  <!-- Focus Hint 컬러 -->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Register_text_input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Register_text_input_layout_ver" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="boxStrokeColor">@color/main_color</item> <!-- 액티브 밑줄 컬러 -->
        <item name="android:textColorHint">@color/hint_color</item> <!-- Hint 컬러 -->
        <item name="hintTextColor">@color/active_hint_color</item>  <!-- Focus Hint 컬러 -->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="Register_text_input_edittext_ver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="CustomHintStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:translationY">-12dp</item> <!-- 힌트 위치 조정 -->
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item> <!-- 아이콘 크기 -->
        <item name="itemTextAppearanceActive">@style/ActiveTextStyle</item> <!-- 활성화 상태 텍스트 -->
        <item name="itemTextAppearanceInactive">@style/InactiveTextStyle</item> <!-- 비활성화 상태 텍스트 -->
    </style>

    <style name="ActiveTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor"></item>
    </style>

    <style name="InactiveTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BasicTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DetailTextStyle" parent="BasicTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PriceTextStyle" parent="BasicTextStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:textColor">#3376C7</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="DetailDivStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/main_div_color</item>

    </style>

    <style name="DetailSubLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="DetailSubTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nanumextrabold</item>
    </style>
    
    <style name="DetailSubContentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:fontFamily">@font/nanumextrabold</item>
    </style>

    <style name="DetailSubUnitTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/nanum</item>
    </style>

    <style name="RegisterTitleStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="RegisterEdittextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RegisterLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="RegisterShortLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="RegisterShortDivStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">#EAEAEA</item>
    </style>
    <style name="RegisterDivStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F4F4F4</item>
    </style>
    
    <style name="RegisterSubTopic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/nanumextrabold</item>
    </style>
</resources>